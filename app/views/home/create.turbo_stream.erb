<%= turbo_stream.update "results" do %>
  <div class="bg-white rounded-xl shadow-2xl p-8 w-full mx-auto">
    <h3 class="text-3xl font-bold text-gray-800 mb-6 text-center">
      💰 Salary Breakdown
      <% if @has_conversion %>
        <div class="text-xs font-normal text-gray-500 mt-1">
          1 USD = <%= number_with_precision(@exchange_rate, precision: 4) %> <%= @currency_code %>
        </div>
      <% end %>
    </h3>

    <div class="mb-4 p-3 bg-gray-50 rounded-lg">
      <div class="flex justify-between gap-4 text-base text-gray-600">
        <div class="flex-1 text-center">
          <div class="font-bold text-gray-800 text-lg"><%= @daily_hours %>h</div>
          <div class="text-sm">Daily</div>
        </div>
        <div class="flex-1 text-center">
          <div class="font-bold text-gray-800 text-lg"><%= @weekly_hours %>h</div>
          <div class="text-sm">Weekly</div>
        </div>
        <div class="flex-1 text-center">
          <div class="font-bold text-gray-800 text-lg"><%= @working_days_current_month %></div>
          <div class="text-sm">Work Days</div>
        </div>
      </div>
    </div>

    <div class="mb-4">
      <div class="p-4 bg-gradient-to-r from-emerald-50 to-green-50 rounded-xl border-l-4 border-emerald-500">
        <div class="text-center">
          <div class="text-lg font-bold text-gray-700 mb-2">📅 <%= @current_month_name %></div>
          <div class="text-3xl font-bold text-emerald-600">
            $<%= number_with_precision(@current_month_earnings, precision: 2) %>
          </div>
          <% if @has_conversion %>
            <div class="text-xl text-emerald-500 mt-1">
              <%= @currency_symbol %><%= number_with_precision(@current_month_earnings_converted, precision: 2) %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="flex flex-col gap-3">
      <div class="flex gap-4">
        <div class="flex-1 p-5 bg-green-50 rounded-xl border-l-4 border-green-500">
          <div class="flex items-center justify-between">
            <div>
              <div class="text-base font-semibold text-gray-600 mb-1">💵 Hourly Rate</div>
              <div class="text-sm text-gray-500">Base wage per hour</div>
            </div>
            <div class="text-right">
              <div class="text-2xl font-bold text-green-600">
                $<%= number_with_precision(@hourly, precision: 2) %>
              </div>
              <% if @has_conversion %>
                <div class="text-lg text-green-500">
                  <%= @currency_symbol %><%= number_with_precision(@hourly_converted, precision: 2) %>
                </div>
              <% end %>
            </div>
          </div>
        </div>

        <div class="flex-1 p-5 bg-blue-50 rounded-xl border-l-4 border-blue-500">
          <div class="flex items-center justify-between">
            <div>
              <div class="text-base font-semibold text-gray-600 mb-1">📆 Daily Earnings</div>
              <div class="text-sm text-gray-500">Working <%= @daily_hours %> hours per day</div>
            </div>
            <div class="text-right">
              <div class="text-2xl font-bold text-blue-600">
                $<%= number_with_precision(@daily, precision: 2) %>
              </div>
              <% if @has_conversion %>
                <div class="text-lg text-blue-500">
                  <%= @currency_symbol %><%= number_with_precision(@daily_converted, precision: 2) %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <div class="flex gap-4">
        <div class="flex-1 p-5 bg-purple-50 rounded-xl border-l-4 border-purple-500">
          <div class="flex items-center justify-between">
            <div>
              <div class="text-base font-semibold text-gray-600 mb-1">🗓️ Monthly Income</div>
              <div class="text-sm text-gray-500"><%= @weekly_hours %> hours/week × 4.33 weeks</div>
            </div>
            <div class="text-right">
              <div class="text-2xl font-bold text-purple-600">
                $<%= number_with_precision(@monthly, precision: 2) %>
              </div>
              <% if @has_conversion %>
                <div class="text-lg text-purple-500">
                  <%= @currency_symbol %><%= number_with_precision(@monthly_converted, precision: 2) %>
                </div>
              <% end %>
            </div>
          </div>
        </div>

        <div class="flex-1 p-5 bg-indigo-50 rounded-xl border-l-4 border-indigo-500">
          <div class="flex items-center justify-between">
            <div>
              <div class="text-base font-semibold text-gray-600 mb-1">📊 Annual Salary</div>
              <div class="text-sm text-gray-500"><%= @weekly_hours %> hours/week × 52 weeks</div>
            </div>
            <div class="text-right">
              <div class="text-2xl font-bold text-indigo-600">
                $<%= number_with_precision(@annual, precision: 2) %>
              </div>
              <% if @has_conversion %>
                <div class="text-lg text-indigo-500">
                  <%= @currency_symbol %><%= number_with_precision(@annual_converted, precision: 2) %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="mt-4 p-3 bg-blue-50 rounded-lg">
      <div class="text-sm text-blue-700 text-center">
        <strong>💡 Annual:</strong>
        $<%= number_with_precision(@annual / 1000, precision: 1) %>K<% if @has_conversion %> • <%= @currency_symbol %><%= number_with_precision(@annual_converted / 1000, precision: 1) %>K<% end %>
      </div>
    </div>
  </div>
<% end %>

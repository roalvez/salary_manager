<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 p-4 flex flex-col">
  <div class="text-center mb-8 pt-8">
    <h1 class="text-4xl font-bold text-gray-800 mb-2">💼 Salary Calculator</h1>
    <p class="text-gray-600">Enter your work details to see your potential earnings</p>
  </div>

  <div class="max-w-7xl mx-auto flex-1 flex items-start justify-center">

    <div class="w-full flex flex-col lg:flex-row gap-8 items-start justify-center">

      <div class="w-full lg:w-1/4 lg:min-w-80">
        <%= form_with url: home_index_path, method: :post, data: { turbo: true } do |f| %>
          <div class="bg-white rounded-lg shadow-md p-6 sticky top-4">
            <h2 class="text-lg font-semibold text-gray-800 mb-4">⚙️ Configuration</h2>

            <div class="space-y-4">
              <div class="flex flex-col md:flex-row gap-4" data-controller="salary-type">
                <div class="flex-1">
                  <label for="salary_type" class="block text-sm font-medium text-gray-700 mb-2">
                    📊 Salary Type
                  </label>
                  <%= f.select :salary_type,
                      options_for_select([
                        ['Hourly', 'hourly'],
                        ['Monthly', 'monthly'],
                        ['Annual', 'annual']
                      ], 'hourly'),
                      {},
                      { class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200 text-sm",
                  } %>
                </div>
                <div class="flex-1">
                  <label for="weekly_hours" class="block text-sm font-medium text-gray-700 mb-2">
                    📆 Weekly Hours
                  </label>
                  <%= f.number_field :weekly_hours, step: 0.5, min: 0, max: 168, value: 40,
                      class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200 text-sm" %>
                </div>
              </div>

              <div class="flex flex-col md:flex-row gap-4">
                <div class="flex-1">
                  <label for="salary_amount" class="block text-sm font-medium text-gray-700 mb-2" data-salary-type-target="label">
                    💰 Wage ($)
                  </label>
                  <%= f.number_field :salary_amount, step: 0.01, min: 0,
                      placeholder: "25.00",
                      class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200 text-sm" %>
                </div>
                <div class="flex-1">
                  <label for="selected_month" class="block text-sm font-medium text-gray-700 mb-2">
                    📆 Month
                  </label>
                  <%= f.date_field :selected_month,
                      value: Date.current.strftime("%Y-%m-%d"),
                      class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200 text-sm" %>
                </div>
              </div>

              <div class="flex flex-col md:flex-row gap-4">
                <div class="flex-1">
                  <label for="daily_hours" class="block text-sm font-medium text-gray-700 mb-2">
                    ⏰ Daily Hours
                  </label>
                  <%= f.number_field :daily_hours, step: 0.5, min: 0, max: 24, value: 8,
                      class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200 text-sm" %>
                </div>
                <div class="flex-1">
                  <label for="currency" class="block text-sm font-medium text-gray-700 mb-2">
                    💱 Currency
                  </label>
                  <%= f.select :currency,
                      options_for_select([
                        ['USD', ''],
                        ['EUR', 'EUR'],
                        ['GBP', 'GBP'],
                        ['BRL', 'BRL'],
                        ['CAD', 'CAD'],
                        ['AUD', 'AUD'],
                        ['JPY', 'JPY'],
                        ['CHF', 'CHF']
                      ]),
                      {},
                      { class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200 text-sm" } %>
                </div>
              </div>
            </div>

            <div class="mt-6">
              <%= f.submit "Calculate Earnings",
                  class: "w-full bg-blue-500 text-white py-2.5 px-4 rounded-lg hover:bg-blue-600 transition duration-200 font-medium text-sm" %>
            </div>
          </div>
        <% end %>
      </div>

      <div id="results" class="w-full lg:w-3/4 flex justify-center lg:justify-start">
      </div>

    </div>
  </div>
</div>
